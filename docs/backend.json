{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "User's email address for login and communication.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's full name, composed from nome and cognome."
        },
        "nome": {
          "type": "string",
          "description": "First name of the user."
        },
        "cognome": {
          "type": "string",
          "description": "Last name of the user."
        },
        "dataNascita": {
          "type": "string",
          "format": "date",
          "description": "Date of birth."
        },
        "codiceFiscale": {
          "type": "string",
          "description": "Italian fiscal code."
        },
        "luogoNascita": {
          "type": "string",
          "description": "Place of birth."
        },
        "via": {
          "type": "string",
          "description": "Street name."
        },
        "numeroCivico": {
          "type": "string",
          "description": "Street number."
        },
        "citta": {
          "type": "string",
          "description": "City."
        },
        "provincia": {
          "type": "string",
          "description": "Province (e.g., 'BS')."
        },
        "cap": {
          "type": "string",
          "description": "Postal code (ZIP code)."
        },
        "telefonoPrincipale": {
          "type": "string",
          "description": "Primary phone number."
        },
        "telefonoSecondario": {
          "type": "string",
          "description": "Secondary phone number."
        },
        "roles": {
          "type": "array",
          "description": "A list of roles assigned to the user.",
          "items": {
            "type": "string",
            "enum": [
              "admin",
              "utente",
              "educatore"
            ]
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user document was created."
        }
      },
      "required": [
        "id",
        "email",
        "displayName",
        "nome",
        "cognome",
        "roles",
        "createdAt"
      ]
    },
    "Familiare": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Familiare",
      "type": "object",
      "description": "Represents a family member of a user. The address is shared and managed in the main user's document.",
      "properties": {
        "nome": {
          "type": "string",
          "description": "First name of the family member."
        },
        "cognome": {
          "type": "string",
          "description": "Last name of the family member."
        },
        "dataNascita": {
          "type": "string",
          "format": "date",
          "description": "Date of birth."
        },
        "codiceFiscale": {
          "type": "string",
          "description": "Italian fiscal code."
        },
        "luogoNascita": {
          "type": "string",
          "description": "Place of birth."
        },
        "telefonoPrincipale": {
          "type": "string",
          "description": "Primary phone number."
        },
        "telefonoSecondario": {
          "type": "string",
          "description": "Secondary phone number."
        },
        "registratoDa": {
          "type": "string",
          "description": "The UID of the user who registered this family member."
        },
        "emailRiferimento": {
          "type": "string",
          "format": "email",
          "description": "The email of the user who registered this family member."
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the family member document was created."
        }
      },
      "required": [
        "nome",
        "cognome",
        "dataNascita",
        "registratoDa",
        "emailRiferimento",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile data, including roles for authorization and the shared family address."
        }
      },
      {
        "path": "/familiari/{familiareId}",
        "definition": {
          "entityName": "Familiare",
          "schema": {
            "$ref": "#/entities/Familiare"
          },
          "description": "Collection to store family members. Address is managed in the parent User document."
        }
      },
      {
        "path": "/gruppi/{gruppoId}",
        "definition": {
          "description": "Collection to store groups."
        }
      },
      {
        "path": "/ruoli-educatori/{ruoloEducatoreId}",
        "definition": {
          "description": "Collection to store educator roles."
        }
      }
    ]
  }
}
