{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "User's email address for login and communication.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's full name."
        },
        "roles": {
          "type": "array",
          "description": "A list of roles assigned to the user.",
          "items": {
            "type": "string",
            "enum": [
              "admin",
              "utente",
              "educatore"
            ]
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user document was created."
        }
      },
      "required": [
        "id",
        "email",
        "displayName",
        "roles",
        "createdAt"
      ]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile data, including roles for authorization."
        }
      },
      {
        "path": "/familiari/{familiareId}",
        "definition": {
          "description": "Collection to store family members."
        }
      },
      {
        "path": "/gruppi/{gruppoId}",
        "definition": {
          "description": "Collection to store groups."
        }
      },
      {
        "path": "/ruoli-educatori/{ruoloEducatoreId}",
        "definition": {
          "description": "Collection to store educator roles."
        }
      }
    ]
  }
}
