{
  "entities": {
    "User": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "User",
      "type": "object",
      "description": "Represents a user within the application.",
      "properties": {
        "id": {
          "type": "string",
          "description": "Unique identifier for the user (matches Firebase Auth UID)."
        },
        "email": {
          "type": "string",
          "description": "User's email address for login and communication.",
          "format": "email"
        },
        "displayName": {
          "type": "string",
          "description": "The user's full name, composed from nome and cognome."
        },
        "nome": {
          "type": "string",
          "description": "First name of the user."
        },
        "cognome": {
          "type": "string",
          "description": "Last name of the user."
        },
        "roles": {
          "type": "array",
          "description": "A list of roles assigned to the user.",
          "items": {
            "type": "string",
            "enum": [
              "admin",
              "utente",
              "educatore"
            ]
          }
        },
        "createdAt": {
          "type": "string",
          "format": "date-time",
          "description": "The timestamp when the user document was created."
        }
      },
      "required": [
        "id",
        "email",
        "displayName",
        "nome",
        "cognome",
        "roles",
        "createdAt"
      ]
    },
    "Famiglia": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Famiglia",
      "type": "object",
      "description": "Represents a family unit, identified by a unique address.",
      "properties": {
        "emailCapofamiglia": {
          "type": "string",
          "format": "email",
          "description": "The email of the main user associated with this family."
        },
        "uidCapofamiglia": {
          "type": "string",
          "description": "The UID of the main user associated with this family."
        },
        "via": {
          "type": "string"
        },
        "numeroCivico": {
          "type": "string"
        },
        "citta": {
          "type": "string"
        },
        "provincia": {
          "type": "string"
        },
        "cap": {
          "type": "string"
        },
        "updatedAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["emailCapofamiglia", "uidCapofamiglia", "via", "citta", "cap", "updatedAt"]
    },
    "Membro": {
      "$schema": "http://json-schema.org/draft-07/schema#",
      "title": "Membro",
      "type": "object",
      "description": "Represents an individual member within a family.",
      "properties": {
        "nome": {
          "type": "string"
        },
        "cognome": {
          "type": "string"
        },
        "dataNascita": {
          "type": "string",
          "format": "date"
        },
        "codiceFiscale": {
          "type": "string"
        },
        "luogoNascita": {
          "type": "string"
        },
        "telefonoPrincipale": {
          "type": "string"
        },
        "telefonoSecondario": {
          "type": "string"
        },
        "createdAt": {
          "type": "string",
          "format": "date-time"
        }
      },
      "required": ["nome", "cognome", "dataNascita", "createdAt"]
    }
  },
  "auth": {
    "providers": [
      "password"
    ]
  },
  "firestore": {
    "structure": [
      {
        "path": "/users/{userId}",
        "definition": {
          "entityName": "User",
          "schema": {
            "$ref": "#/entities/User"
          },
          "description": "Stores user profile data, including roles for authorization."
        }
      },
      {
        "path": "/famiglie/{famigliaId}",
        "definition": {
          "entityName": "Famiglia",
          "schema": {
            "$ref": "#/entities/Famiglia"
          },
          "description": "Collection where each document represents a family at a unique address."
        }
      },
      {
        "path": "/famiglie/{famigliaId}/membri/{membroId}",
        "definition": {
            "entityName": "Membro",
            "schema": { "$ref": "#/entities/Membro" },
            "description": "Sub-collection for individual family members."
        }
      }
    ]
  }
}
