/**
 * This ruleset is designed around a family-centric data model.
 * A "Famiglia" is identified by a unique address and contains members.
 * Access is primarily granted to the head of the household (capofamiglia).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      // It's better to read the user doc from the specific path.
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      // Check if user is signed in and has 'admin' in their roles array.
      return isSignedIn() && getUserData().roles.hasAny(['admin']);
    }

    // ----------------------------------------------------------------------
    // User Profile Rules
    // ----------------------------------------------------------------------
    match /users/{userId} {
      // Admin can read any user profile, a user can read their own.
      allow get: if isOwner(userId) || isAdmin();
      // Only admins can list all users.
      allow list: if isAdmin();
      // An admin can update any user's roles, a user can update their own profile.
      allow update: if isOwner(userId) || isAdmin();
      // A user can create their own profile document.
      allow create: if isOwner(userId);
      // Only admins can delete users.
      allow delete: if isAdmin();
    }

    // ----------------------------------------------------------------------
    // Family Rules
    // The document ID {famigliaId} MUST be the same as the user's UID.
    // ----------------------------------------------------------------------
    match /famiglie/{famigliaId} {
      // An admin can read any family doc. A user can read their own.
      allow get: if isOwner(famigliaId) || isAdmin();
      
      // Only admins can list all families for database purposes.
      allow list: if isAdmin();
      
      // ONLY the owner (capofamiglia) can create, update, or delete their family doc.
      // Admin write access is removed from here.
      allow write: if isOwner(famigliaId);
      
      // Rules for the 'membri' sub-collection
      match /membri/{membroId} {
        // Admins can read members for the database view. The owner can read their own.
        allow read: if isOwner(famigliaId) || isAdmin();
        
        // ONLY the owner (capofamiglia) can create, update, or delete members.
        allow write: if isOwner(famigliaId);
      }
    }
    
    // Rule for the 'membri' collection group query, needed for the admin database page.
    match /{path=**}/membri/{membroId} {
        // Allow admins to list all members across all families.
        allow read: if isAdmin();
    }
  }
}
