/**
 * This ruleset is designed around a family-centric data model.
 * A "Famiglia" is identified by a unique address and contains members.
 * Access is primarily granted to the head of the household (capofamiglia).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().roles.hasAny(['admin']);
    }

    // This function is no longer needed as we use isOwner(famigliaId)
    // function isCapofamiglia(famigliaId) {
    //    return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/famiglie/$(famigliaId)).data.uidCapofamiglia;
    // }

    // ----------------------------------------------------------------------
    // User Profile Rules
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow update: if isOwner(userId) || isAdmin(); // Admin can update user profiles
      allow create: if isOwner(userId);
      allow delete: if isAdmin(); // Admin can delete users
    }

    // ----------------------------------------------------------------------
    // Family Rules
    // The document ID {famigliaId} MUST be the same as the user's UID.
    // ----------------------------------------------------------------------
    match /famiglie/{famigliaId} {
      // An admin can get any family doc. A user can get their own family doc.
      allow get: if isOwner(famigliaId) || isAdmin();
      
      // Only admins can list all families. Users must read their family doc directly.
      allow list: if isAdmin();
      
      // A user can create/update their own family document.
      allow write: if isOwner(famigliaId);
      
      // Admins or the owner can delete families
      allow delete: if isAdmin() || isOwner(famigliaId);
      
      // Rules for the 'membri' sub-collection
      match /membri/{membroId} {
        // Admins or the head of family can read members.
        allow read: if isAdmin() || isOwner(famigliaId);
        
        // Head of family can create/update/delete their own family members.
        allow write: if isOwner(famigliaId);
      }
    }
    
    // Rule for the 'membri' collection group query
    match /{path=**}/membri/{membroId} {
        // Allow admins to list all members across all families for the admin user table
        allow list, read: if isAdmin();
    }
  }
}
