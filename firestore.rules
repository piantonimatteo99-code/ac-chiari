/**
 * This ruleset is designed around a family-centric data model.
 * A "Famiglia" is identified by a unique address and contains members.
 * Access is primarily granted to the head of the household (capofamiglia).
 */
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // ----------------------------------------------------------------------
    // Helper Functions
    // ----------------------------------------------------------------------
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return isSignedIn() && request.auth.uid == userId;
    }

    function getUserData() {
      return get(/databases/$(database)/documents/users/$(request.auth.uid)).data;
    }

    function isAdmin() {
      return isSignedIn() && getUserData().roles.hasAny(['admin']);
    }

    function isCapofamiglia(famigliaId) {
       return isSignedIn() && request.auth.uid == get(/databases/$(database)/documents/famiglie/$(famigliaId)).data.uidCapofamiglia;
    }

    // ----------------------------------------------------------------------
    // User Profile Rules
    // ----------------------------------------------------------------------
    match /users/{userId} {
      allow get: if isOwner(userId) || isAdmin();
      allow list: if isAdmin();
      allow update: if isOwner(userId) || isAdmin(); // Admin can update user profiles
      allow create: if isOwner(userId);
      allow delete: if isAdmin(); // Admin can delete users
    }

    // ----------------------------------------------------------------------
    // Family Rules
    // ----------------------------------------------------------------------
    match /famiglie/{famigliaId} {
      allow get: if isCapofamiglia(famigliaId) || isAdmin();
      // Allow an admin to list all families.
      // Allow a regular user to query for their own family document based on their UID.
      allow list: if isAdmin() || (isSignedIn() && request.query.get('uidCapofamiglia') == request.auth.uid);
      
      // Only head of family can create/update their own family document
      allow write: if isSignedIn() && request.resource.data.uidCapofamiglia == request.auth.uid;
      
      // Admins can delete families
      allow delete: if isAdmin();
      
      // Rules for the 'membri' sub-collection
      match /membri/{membroId} {
        // Admins can read any member, head of family can read their own members.
        allow read, list: if isAdmin() || isCapofamiglia(famigliaId);
        
        // Head of family can create/update/delete their own family members.
        allow write: if isCapofamiglia(famigliaId);
        
        // Admin can also delete members
        allow delete: if isAdmin() || isCapofamiglia(famigliaId);
      }
    }
    
    // Rule for the 'membri' collection group query
    match /{path=**}/membri/{membroId} {
        // Allow admins to list all members across all families for the admin user table
        allow list, read: if isAdmin();
    }
  }
}
